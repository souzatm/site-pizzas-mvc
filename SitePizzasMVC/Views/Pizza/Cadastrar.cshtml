@using SitePizzasMVC.Dto
@model PizzaCriacaoDto

<div class="container mt-5">

    <form method="post" asp-action="Cadastrar" asp-controller="Pizza" enctype="multipart/form-data">
        <h2>Cadastro de Pizza</h2>

        <div class="text-center">
            <label for="ImageFile">
                <img id="img" style="width: 150px; height: 200px" />
            </label>
        </div>

        <div class="mb-1">
            <label class="form-label mt-3">Imagem: </label>
            <input type="file" id="ImageFile" name="foto" class="form-control shadow-none" 
        </div>

        <div class="mb-1">
            <label class="form-label">Sabor: </label>
            <input type="text" asp-for="Sabor" class="form-control shadow-none" />
            <span class="text-danger" asp-validation-for="Sabor"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Descricao: </label>
            <input type="text" asp-for="Descricao" class="form-control shadow-none" />
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Valor: </label>
            <input type="text" asp-for="Valor" class="form-control shadow-none" />
            <span class="text-danger" asp-validation-for="Valor"></span>
        </div>

        <div class="btn-box d-flex mt-3">
            <button type="submit" type="button" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle">Cadastrar!</i></button>
            <a type="submit" class="btn btn-info w-50" asp-controller="Pizza" asp-action="Index"><i class="bi bi-arrow-left-circle">Voltar</i></a>
        </div>

        <script>

            const inputFile = document.querySelector("#ImageFile");

            inputFile.addEventListener("change", function (e) {
                const inputTarget = e.target;
                const file = inputTarget.files[0];

                if (file) {
                    const reader = new FileReader();

                    reader.addEventListener("load", function (e) {
                        const readerTarget = e.target;
                        const img = document.querySelector("#img");
                        img.src = readerTarget.result;

                        const figcaption = document.querySelector("#figcaption");
                        figcaption.innerHTML = file.name;
                    });

                    reader.readAsDataURL(file);
                }
            }
            )
        </script>

    </form>

</div>